<head>
	<%= javascript_include_tag "prototype" %>
</head>
<%= form_for(@inning) do |f| %>
  <% if @inning.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@inning.errors.count, "error") %> prohibited this inning from being saved:</h2>

      <ul>
      <% @inning.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :overs %><br />
    <%= f.text_field :overs %>
  </div>
  <div class="field">
    <%= f.label :wides %><br />
    <%= f.text_field :wides %>
  </div>
  <div class="field">
    <%= f.label :noballs %><br />
    <%= f.text_field :noballs %>
  </div>
  <div class="field">
    <%= f.label :legbyes %><br />
    <%= f.text_field :legbyes %>
  </div>
  <div class="field">
    <%= f.label :byes %><br />
    <%= f.text_field :byes %>
  </div>
  <div class="field">
    <%= f.label :extras %><br />
    <%= f.text_field :extras %>
  </div>
  <div class="field">
    <%= f.label :score %><br />
    <%= f.text_field :score %>
  </div>
  <div class="field">
    <%= f.label :bowled_out %><br />
    <%= f.check_box :bowled_out %>
  </div>
  <div class="field">
    <%= f.label :summary %><br />
    <%= f.text_area :summary %>
	</div>

	<p><%= link_to "New Batsman", {:action => "new_batsman", :inning_id => @inning.id}, :remote => true   %> </p>

	<table style='margin-left:80px;'>  
		<tr><th colspan="8">Inning1<th></tr>
				<tr><th>Batsman</th><th id="out_how_header">Out?</th><th>Fielder</th><th>Bowler</th><th>Runs</th><th>Balls</th><th>4s</th><th>6s</th></tr>
		<tr id="last_row"> </tr>
	</table>
	<table style='margin-left:80px;'>  
		<% f.fields_for :bowling_performances do | p | %>
			<tr><th>Bowlwer:</th><td><%= select :player, :id, Player.find_all_by_team_id(Match.find(@inning.match_id).other_team(Team.find(@inning.batting_team_id)).id).collect { | p | [p.name, p.id ] } %></td></tr>
		<% end %>
	</table>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
